<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ykkoButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="ykkoButtonWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_rounded_white</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="ykkoButtonRed" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_rounded_red</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="circleButtonWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorBg</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/btn_circle</item>
    </style>

    <style name="customEditLoginStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/login_edit_rounded</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="customEditTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/edit_rounded</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="customEditTextStyle2" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/edit_rounded</item>
        <item name="android:textSize">17dp</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="reservePickerButtonStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/btn_picker</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#707070</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="adminReservationListTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="adminReservationListTextStyle2" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
