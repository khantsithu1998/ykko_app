<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/menu_image"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_width="127dp"
                android:layout_height="94dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/admin_food_stick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="17dp"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/admin_food_stick_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/admin_food_stick_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textSize="13dp"
                android:fontFamily="@font/arial_black"/>

            <TextView
                android:id="@+id/admin_available_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textSize="13dp"
                android:fontFamily="@font/arial_black"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageButton
                style="@style/ykkoButtonWhite"
                android:id="@+id/admin_menu_edit_btn"
                android:elevation="4dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:src="@drawable/ic_edit_blue_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:shadowColor="#FF000000"/>
            <ImageButton
                style="@style/ykkoButtonWhite"
                android:id="@+id/admin_menu_del_btn"
                android:elevation="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:src="@drawable/ic_delete_red_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>