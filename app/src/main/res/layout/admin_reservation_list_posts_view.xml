<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/admin_res_list_no"
        style="@style/adminReservationListTextStyle2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/admin_res_list_name"
        style="@style/adminReservationListTextStyle2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
    <TextView
        android:id="@+id/admin_res_list_phNo"
        style="@style/adminReservationListTextStyle2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"/>
    <ImageButton
        android:layout_weight="1"
        android:translationZ="2dp"
        android:id="@+id/admin_res_list_del_btn"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:src="@drawable/ic_more_vert_green_24dp" />
</LinearLayout>