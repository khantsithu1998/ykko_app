<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingHorizontal="20dp"
               android:layout_marginBottom="30dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="5">
                   <TextView
                       android:text="Customer Name"
                       android:textColor="@color/themeColor"
                       android:textSize="17dp"
                       android:fontFamily="@font/raleway_semibold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/admin_confirm_name"
                       android:textColor="@android:color/black"
                       android:textSize="17dp"
                       android:fontFamily="@font/raleway_semibold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="5">
                   <TextView
                       android:text="Phone Number"
                       android:textColor="@color/themeColor"
                       android:textSize="17dp"
                       android:fontFamily="@font/raleway_semibold"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/admin_confirm_phNo"
                       android:textColor="@android:color/black"
                       android:textSize="17dp"
                       android:fontFamily="@font/raleway_semibold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Township:"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/admin_confirm_township"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Branch:"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/admin_confirm_branch"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Date:"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/admin_confirm_date"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Number Of Persons:"
                    android:textAlignment="textEnd"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/admin_confirm_noOfPerson"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Food 1:"
                    android:textAlignment="textEnd"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/admin_confirm_food1"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Food 2:"
                    android:textAlignment="textEnd"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/admin_confirm_food2"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="@dimen/confirm_text_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/confirm_text_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Description:"
                    android:textAlignment="textEnd"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/admin_confirm_des"
                    android:layout_marginLeft="@dimen/confirm_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>